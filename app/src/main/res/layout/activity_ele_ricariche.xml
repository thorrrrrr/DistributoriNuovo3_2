<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ele_ricariche_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:logo="@drawable/banner_img"
        app:menu="@menu/ele_ricariche"
        app:title="@string/app_name" />

    <TextView
        android:id="@+id/formDescMacchinaRic_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ele_ricariche_toolbar"
        android:background="#ffffff"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/formEleRicarica_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formDescMacchinaRic_id"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:gravity="center"
        android:text="@string/eleRicariche"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic" />

    <ListView
        android:id="@+id/elencoRicariche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ExitRic_button"
        android:layout_below="@+id/formEleRicarica_id"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#fbfbfb"
        android:saveEnabled="true"
        android:scrollingCache="true" />

    <ImageButton
        android:id="@+id/ExitRic_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back_button" />

    <ImageButton
        android:id="@+id/SelTuttoRicariche_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/selall_button" />

    <ImageButton
        android:id="@+id/DeSelTuttoRicariche_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/deselall_button" />

    <ImageButton
        android:id="@+id/Consolida_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/arrowdown_button" />

    <ImageButton
        android:id="@+id/EliminaRicariche_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/recycle_bin_button" />
</RelativeLayout>
